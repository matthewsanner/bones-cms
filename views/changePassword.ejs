<% layout('layouts/boilerplate')%>
<div class="container justify-content-center align-items-center mb-3">
    <div class="row">
        <div class="col-8 offset-2 col-md-6 offset-md-3 col-lg-4 offset-lg-4">
            <div class="card shadow">
                <!-- <img src="https://res.cloudinary.com/dunbqpis8/image/upload/v1675987931/Flashy/flashycard_ql7fyz.png" alt="colorful flashy card logo" class="card-img-top"> -->
                <div class="card-body">
                    <h5 class="card-title">Change Password</h5>
                    <form action="/users/newpassword" method="POST">
                    <!-- May want to add this back in with validation in place - 'class="validated-form" novalidate' -->
                        <div class="mb-3">
                            <label class="form-label" for="password">Enter new password</label>
                            <input class="form-control" type="text" id="password" name="password" autofocus required>
                            <!-- <div class="valid-feedback">
                                Looks good!
                            </div> -->
                            <input type="hidden" name="username" value="<%= username %>">
                        </div>
                      
                        <div class="d-grid gap-2 col-12 mx-auto">
                            <button class="btn btn-success">Submit</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>